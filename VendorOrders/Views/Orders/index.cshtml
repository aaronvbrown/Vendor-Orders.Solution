@{
  Layout = "_Layout";
}

@using VendorOrders.Models;

<h1>Customer Orders:</h1>
@if (@Model.Count == 0)
{
  <h3> No Orders have been added yet. </h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Name'>@vendor.Name</a></h3>
}

<p><a href='/vendors/@Model["order"].Id/orders/new'>Add another order</a></p>
<p><a href='/vendors'>View all customers</a></p>


