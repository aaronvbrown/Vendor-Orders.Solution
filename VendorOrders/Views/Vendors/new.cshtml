@{
  Layout = "_Layout";
}

<h1>Add a customer</h1>
<p>Add a new customer here:</p>

<form action="/vendors" method="post">
  <label for"vendorName">Customer Name</label>
  <input id="vendorName" name="vendorName" type="text">
  <br>
  <label for"vendorDescription">Customer Description</label>
  <input id="vendorDescription" name="vendorDescription" type="text">
  <br>
  <button type="submit">Add Customer</button>
</form>


<p><a href='/vendors'>Back to all customers</a></p>



